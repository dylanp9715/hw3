<!-- Place details page -->

<h1><%= @place["name"]%></h1>

<% for entry in @entries %>
  <h3><%= entry["title"]%></h3>
  <div style="margin-top: -20px;">
    <small><%= entry["posted_on"]%></small>
  </div>
  <p><%= entry["description"]%></p>
<% end %>

<p>
  <a href="/entries/new?place_id=<%= @place["id"]%>">New Post</a>
</p>
